@using Microsoft.AspNetCore.Identity
@using MedicalLifeHealthcare.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Admin Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    @* <link rel="stylesheet" href="~/css/cerulean.css" /> *@
    @* <link rel="stylesheet" href="~/css/Materia.css" /> *@
    <link rel="stylesheet" href="~/css/Dashboards.css" />
    <link rel="stylesheet" href="~/css/EditUser.css" />
    <link rel="stylesheet" href="~/css/cards.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <style>

    </style>
</head>
<body>
    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
        <label for="check">
            <div class="left_area">
                <h3>MediLife Clinic</h3>
            </div>
        </label>
        @* <div class="left_area">
        <h3>MediLife Clinic</h3>
        </div> *@
        <div class="right_area">
            <a href="#" class="logout_btn">Logout</a>
        </div>
    </header>
    <!--header area end-->
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
        <div class="nav_bar">
            <img src="1.png" class="mobile_profile_image" alt="">
            <i class="fa fa-bars nav_btn"></i>
        </div>
        <div class="mobile_nav_items">
            <a href="#"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
            <a href="#"><i class="fas fa-cogs"></i><span>Components</span></a>
            <a href="#"><i class="fas fa-table"></i><span>Tables</span></a>
            <a href="#"><i class="fas fa-th"></i><span>Forms</span></a>
            <a href="#"><i class="fas fa-info-circle"></i><span>About</span></a>
            <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
            <a href="#"><i class="fas fa-bars" id="sidebar_btn"></i><span>Menu</span></a>
        </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <img src="1.png" class="profile_image" alt="">
            <li class="nav-item">
                <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>

        </div>

        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Role" asp-action="Pathology">Pathology Dashboard</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Labs" asp-action="Index"><i class="fas fa-microscope"></i>Test Labs</a>
        <a href="#"><i class="fas fa-th"></i><span>Book Appointment</span></a>
        <a href="#"><i class="fas fa-info-circle"></i><span>About</span></a>
        <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>

    </div>
    <!--sidebar end-->

    <div class="content">
        <div>
            <h3 class="text-black align-content-center text-body">
                Dashboard Pathology
            </h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://thumbs.dreamstime.com/z/doctor-completing-blood-test-form-12746102.jpg?w=992" class="card-img-top" alt="Doctor Completing Blood Test Form">
                    <div class="card-body">
                        <h5 class="card-title">Test Request Management</h5>
                        <p class="card-text">Your role is pivotal in overseeing and coordinating accurate lab tests and results for patients' healthcare needs.</p>
                        <a href="#" class="btn btn-primary">Test Request Management</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Another card with similar structure -->
                <div class="card">
                    <img src="https://i0.wp.com/talkingcirclestherapy.com/wp-content/uploads/2022/03/medication-management.jpeg?ssl=1" class="card-img-top" alt="Medication Management">
                    <div class="card-body">
                        <h5 class="card-title">Prescription Management</h5>
                        <p class="card-text">Your role is pivotal in overseeing and managing pathology tests and results to ensure accurate diagnoses and patient care.</p>
                        <a href="#" class="btn btn-primary">Prescription Management</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Another card with similar structure -->
                <div class="card">
                    <img src="https://www.testmonitor.com/hs-fs/hubfs/reports-coverage-2@2x-min.png?width=2528&height=1353&name=reports-coverage-2@2x-min.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Reporting Tests</h5>
                        <p class="card-text">As an administrator, your role is pivotal in overseeing and managing the processes involved in laboratory testing and analysis for accurate diagnoses and patient care.</p>
                        <a href="#" class="btn btn-primary">Reporting Tests</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.nav_btn').click(function () {
                $('.mobile_nav_items').toggleClass('active');
            });
        });
    </script>
</body>
</html>





