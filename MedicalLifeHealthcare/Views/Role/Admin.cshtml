                            @foreach (var user in Model)
                            {
                                <tr>
                                    <th scope="row">@user.Id</th>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <a asp-controller="Role" asp-action="EditPatients" asp-route-id="@user.Id">Edit</a>
                                    </td>
