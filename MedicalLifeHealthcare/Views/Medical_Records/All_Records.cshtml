@model IEnumerable<MedicalLifeHealthcare.Models.Medical_Records>

@{
    ViewData["ViewTitle"] = "List all Medical Record";
    ViewData["Description"] = "All Medical Record for all medical files";
    Layout = "~/Views/Shared/_WalkIn.cshtml";
}

<table id="MyTable" class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrentMedications)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodPressure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeartRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nurse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentMedications)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BloodPressure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeartRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temperature)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordDate)
                </td>
                <td>
                    @item.Nurse.FirstName @item.Nurse.LastName
                </td>
                <td>
                    <a class="btn btn-warning m-1" asp-action="Edit" asp-route-id="@item.RecordsID">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RecordsID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
