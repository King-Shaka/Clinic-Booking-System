@using Microsoft.AspNetCore.Identity
@using MedicalLifeHealthcare.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model MedicalLifeHealthcare.Models.Counselling

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    <link rel="stylesheet" href="~/css/Dashboards.css" />
    <link rel="stylesheet" href="~/css/EditUser.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <style>

    </style>
</head>
<body>
    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
        <label for="check">
            <div class="left_area">
                <h3>MediLife Clinic</h3>
            </div>
        </label>
        <div class="right_area">
            <a href="#" class="logout_btn">Logout</a>
        </div>
    </header>
    <!--header area end-->
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
        <div class="nav_bar">
            <img src="1.png" class="mobile_profile_image" alt="">
            <i class="fa fa-bars nav_btn"></i>
        </div>
        <div class="mobile_nav_items">
            <a href="#"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
            <a href="#"><i class="fas fa-cogs"></i><span>Components</span></a>
            <a href="#"><i class="fas fa-table"></i><span>Tables</span></a>
            <a href="#"><i class="fas fa-th"></i><span>Forms</span></a>
            <a href="#"><i class="fas fa-info-circle"></i><span>About</span></a>
            <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
            <a href="#"><i class="fas fa-bars" id="sidebar_btn"></i><span>Menu</span></a>
        </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <img src="1.png" class="profile_image" alt="">
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
        </div>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Role" asp-action="Counsellor"><i class="fas fa-heart"></i>Counsellor Dashboard</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Counsellings" asp-action="Index"><i class="	fas fa-heart"></i>Manage Counselling</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Counsellings" asp-action="Create">Create New</a>

        <a href="#"><i class="fas fa-info-circle"></i><span>About</span></a>
        <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </div>
    <!--sidebar end-->

    <div class="content">
        <h1>Delete Counselling</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Counselling</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SessionDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SessionDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TherapistName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TherapistName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PatientName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PatientContact)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientContact)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TherapistContact)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TherapistContact)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SessionNotes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SessionNotes)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsCompleted)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsCompleted)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsFollowUpRequired)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsFollowUpRequired)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FollowUpDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FollowUpDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FollowUpNotes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FollowUpNotes)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index" button type="button" class="btn btn-secondary">Back to List</a>

            </form>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.nav_btn').click(function () {
                $('.mobile_nav_items').toggleClass('active');
            });
        });
    </script>
</body>
</html>
