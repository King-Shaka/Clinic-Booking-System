@model MedicalLifeHealthcare.Models.Medical_Records

@{
    ViewData["ViewTitle"] = "Create new  Medical Record";
    ViewData["Description"] = "Charting Wellness: The Framework for Creating Patient Medical Records.";
    Layout = "~/Views/Shared/_WalkIn.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden value="@ViewBag.ID" asp-for="FileID" class="form-control" />
            <div class="form-group">
                <label asp-for="CurrentMedications" class="control-label"></label>
                <input asp-for="CurrentMedications" class="form-control" />
                <span asp-validation-for="CurrentMedications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressure" class="control-label">Blood pressure (mmHg)</label>
                <input asp-for="BloodPressure" class="form-control" />
                <span asp-validation-for="BloodPressure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeartRate" class="control-label">Heart rate (BPM)</label>
                <input asp-for="HeartRate" class="form-control" />
                <span asp-validation-for="HeartRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label">Temparature in (°C)</label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label">Height in (cm)</label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight in (kg)</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Medical Record" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


