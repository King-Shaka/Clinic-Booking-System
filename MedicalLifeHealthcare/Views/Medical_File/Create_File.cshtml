@model MedicalLifeHealthcare.Models.Medical_File


    <div class="col-12">
    @if (TempData["Success"] != null)
    {

        <div class="alert   w-100 @(Convert.ToString(TempData["UpdateType"]) == "success" ? "alert-success" : "alert-danger")" id="tempDataMessage" role="alert">
            <h5 class="text-dark text-center">@TempData["Success"]</h5>
        </div>
    }
    <form asp-controller="Medical_File" asp-action="Create_File">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6 col-xl-6 col-sm-12 ">
                <span class="border-1 rounded bg-primary">
                    <h4>Personal Information</h4>
                    <hr />
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="Gender" class="control-label">Gender  <strong><span class="text-danger text-end"> *</span></strong> </label>
                            <select asp-for="Gender" class="form-control">
                                <option disabled>Select gender</option>
                                <option>Female</option>
                                <option>male</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="BirthDate" class="control-label"> Date Of birth <strong><span class="text-danger text-end"> *</span></strong></label>
                            <input asp-for="BirthDate" class="form-control" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="IDNumber" class="control-label"> Id Number <strong><span class="text-danger text-end"> *</span></strong></label>
                        <input asp-for="IDNumber" class="form-control" />
                        <span asp-validation-for="IDNumber" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="AddressLine1" class="control-label"> Address <strong><span class="text-danger text-end"> *</span></strong></label>
                            <input asp-for="AddressLine1" class="form-control" />
                            <span asp-validation-for="AddressLine1" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Province" class="control-label">Province <strong><span class="text-danger text-end"> *</span></strong></label>
                            <input asp-for="Province" class="form-control" />
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Country" class="control-label">Country <strong><span class="text-danger text-end"> *</span></strong></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="PostalCode" class="control-label"> Postal Code <strong><span class="text-danger text-end"> *</span></strong></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                    </div>
                
                </span>
               
            </div>

            <div class="col-md-6 col-xl-6 col-sm-12 border-1">
                <h4>Emergency Person</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="EmergencyPerson" class="control-label"> Full Names <strong><span class="text-danger text-end"> *</span></strong></label>
                    <input asp-for="EmergencyPerson" class="form-control" />
                    <span asp-validation-for="EmergencyPerson" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmergencyContactNo" class="control-label">Contact number <strong><span class="text-danger text-end"> *</span></strong></label>
                    <input asp-for="EmergencyContactNo" class="form-control" />
                    <span asp-validation-for="EmergencyContactNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Relationship" class="control-label">Reletionship <strong><span class="text-danger text-end"> *</span></strong></label>
                    <input asp-for="Relationship" class="form-control" />
                    <span asp-validation-for="Relationship" class="text-danger"></span>
                </div>
                <h4 class="text-danger">Medical History</h4>
                <hr class="text-danger" />
                <div class="form-group">
                    <label asp-for="BloodType" class="control-label"></label>
                    <input asp-for="BloodType" class="form-control" />
                    <span asp-validation-for="BloodType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Allergies" class="control-label"></label>
                    <input asp-for="Allergies" class="form-control" />
                    <span asp-validation-for="Allergies" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnySurgeries" class="control-label"></label>
                    <input asp-for="AnySurgeries" class="form-control" />
                    <span asp-validation-for="AnySurgeries" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExtraNotes" class="control-label"></label>
                    <input asp-for="ExtraNotes" class="form-control" />
                    <span asp-validation-for="ExtraNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create File" class="btn btn-primary" />
                </div>
           </div>

        </div>
        </form>
    </div>



