@using MedicalLifeHealthcare.Models
@{
    ViewData["ViewTitle"] = "Patient's Walk-In Dahsboard";
    ViewData["Title"] = "Patient";
    Layout = "~/Views/Shared/_WalkIn.cshtml";
}

<section class="section">
    <div class="row mb-2">
        <div class="col-12 col-md-3">
            <div class="card card-statistic">
                <div class="card-body p-0">
                    <div class="d-flex flex-column">
                        <div class='px-3 py-3 d-flex justify-content-between'>
                            <h3 class='card-title'>Appointments</h3>
                            <div class="card-right d-flex align-items-center">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card card-statistic">
                <div class="card-body p-0">
                    <div class="d-flex flex-column">
                        <div class='px-3 py-3 d-flex justify-content-between'>
                            <h3 class='card-title'>Medical Files</h3>
                            <div class="card-right d-flex align-items-center">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card card-statistic">
                <div class="card-body p-0">
                    <div class="d-flex flex-column">
                        <div class='px-3 py-3 d-flex justify-content-between'>
                            <h3 class='card-title'>Medical Records</h3>
                            <div class="card-right d-flex align-items-center">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card card-statistic">
                <div class="card-body p-0">
                    <div class="d-flex flex-column">
                        <div class='px-3 py-3 d-flex justify-content-between'>
                            <h3 class='card-title'>Messages</h3>
                            <div class="card-right d-flex align-items-center">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<h5 class="text-center">List of my Appointments</h5>
<table id="REeport" class="table">
    <thead class="table-dark">
        <tr>
            <th>
                Appointment Date_Time
            </th>
            <th>
                Reason for appointment
            </th>
            <th>
                Status
            </th>

          
        </tr>
    </thead>
    <tbody>
        @foreach (Appointments item in ViewBag.Appointmnet)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Time)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
              
            </tr>
        }
    </tbody>
</table>