@model MedicalLifeHealthcare.Models.Tests

@using Microsoft.AspNetCore.Identity
@using MedicalLifeHealthcare.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Admin Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <!-- Your existing head content here -->
    <!-- Your stylesheet links and JavaScript scripts here -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    <link rel="stylesheet" href="~/css/Dashboards.css" />
    <link rel="stylesheet" href="~/css/EditUser.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <style>

    </style>
</head>
<body>
    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
        <label for="check">
            <div class="left_area">
                <h3>MediLife Clinic</h3>
            </div>
        </label>
        <div class="right_area">
            <a href="#" class="logout_btn">Logout</a>
        </div>
        <!-- Your header content here -->
    </header>
    <!--header area end-->
    <!-- Sidebar end -->
    <!-- Content start -->
    <div class="mobile_nav">
        <div class="nav_bar">
            <img src="1.png" class="mobile_profile_image" alt="">
            <i class="fa fa-bars nav_btn"></i>
        </div>
        <div class="mobile_nav_items">
            <a href="#"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
            <a href="#"><i class="fas fa-cogs"></i><span>Components</span></a>
            <a href="#"><i class="fas fa-table"></i><span>Tables</span></a>
            <a href="#"><i class="fas fa-th"></i><span>Forms</span></a>
            <a href="#"><i class="fas fa-info-circle"></i><span>About</span></a>
            <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
            <a href="#"><i class="fas fa-bars" id="sidebar_btn"></i><span>Menu</span></a>
        </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <img src="1.png" class="profile_image" alt="">
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
        </div>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Labs" asp-action="Index"><i class="fas fa-microscope"></i>Test Labs</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Patients" asp-action="Index"><i class="fas fa-procedures"></i>Patients</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Tests" asp-action="Index"><i class="fas fa-notes-medical"></i>Test Results</a>
        <a href="#"><i class="fas fa-th"></i><span>Book Appointment</span></a>
        <a href="#"><i class="fas fa-info-circle"></i><span>About</span></a>
        <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </div>
    <div class="content">
        <!-- Your dashboard content here -->
        <!-- Delete view content start -->
        <div class="card">
            <h1>Delete</h1>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Tests</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TestName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TestName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TestDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TestDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PatientId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PatientId)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" button type="button" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
        <!-- Delete view content end -->
        <!-- Other dashboard content here -->
    </div>
    <!-- Content end -->
    <!-- Your script to toggle mobile navigation here -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('.nav_btn').click(function () {
                $('.mobile_nav_items').toggleClass('active');
            });
        });
    </script>
</body>
</html>
